

<div
  class="
    footer-utilities__group-copyright
    custom-typography
    {% if block.settings.font_size != "" %}custom-font-size{% endif %}
  "
  style="{% render 'typography-style', preset: 'custom', settings: block.settings %}"
  {{ block.shopify_attributes }}
>
  <span class="footer-utilities__text">
    &copy; {{ 'now' | date: '%Y' }}
    {{ shop.name | link_to: routes.root_url -}}
    {%comment %}, {{ powered_by_link }}{% endcomment %}

      {% if block.settings.powered_by_text != blank and block.settings.powered_by_link != blank %}
      ,  <a href="{{ block.settings.powered_by_link }}" target="_blank" rel="noopener">
        {{ block.settings.powered_by_text }}
      </a>
    {% endif %}

  </span>
</div>

{% schema %}
{
  "name": "t:names.copyright",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:content.copyright_info"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "t:settings.size",
      "options": [
        {
          "value": "0.625rem",
          "label": "10px"
        },
        {
          "value": "0.75rem",
          "label": "12px"
        },
        {
          "value": "0.875rem",
          "label": "14px"
        },
        {
          "value": "1rem",
          "label": "16px"
        },
        {
          "value": "1.125rem",
          "label": "18px"
        }
      ],
      "default": "0.75rem"
    },
    {
      "type": "select",
      "id": "case",
      "label": "t:settings.case",
      "options": [
        {
          "value": "none",
          "label": "t:options.default"
        },
        {
          "value": "uppercase",
          "label": "t:options.uppercase"
        }
      ],
      "default": "none"
    },
    {
      "type": "text",
      "id": "powered_by_text",
      "label": "Powered by text",
      "default": "Powered by Code and Spade"
    },
    {
      "type": "url",
      "id": "powered_by_link",
      "label": "Powered by link"
    }

  ]
}
{% endschema %}
